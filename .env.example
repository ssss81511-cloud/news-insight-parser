# ==================================================
# NEWS INSIGHT PARSER - Environment Variables
# ==================================================

# ==================================================
# REQUIRED: AI Generation
# ==================================================
# Get free API key at: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# ==================================================
# OPTIONAL: Telegram Publishing
# ==================================================
# 1. Create bot: https://t.me/BotFather
# 2. Get token from BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Channel ID format: @channel_name or -100xxxxxxxxxx
TELEGRAM_CHANNEL_ID=@your_channel_here

# ==================================================
# OPTIONAL: Stock Photos (Fallback for AI images)
# ==================================================
# Get free API key at: https://www.pexels.com/api/
# NOTE: AI images via Pollinations.ai are FREE and work without this!
PEXELS_API_KEY=your_pexels_api_key_here

# ==================================================
# OPTIONAL: Reddit (if using Reddit parser)
# ==================================================
# Get credentials at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=NewsInsightParser/1.0

# ==================================================
# Database (Auto-configured on Render)
# ==================================================
# Local: sqlite:///data/insights.db
# Production: postgres://... (set by Render)
DATABASE_URL=sqlite:///data/insights.db

# ==================================================
# Automation Settings
# ==================================================
# Enable/disable automated content generation
AUTO_GENERATE_ENABLED=true

# Post schedule: 3x daily (morning, afternoon, evening)
# Format: comma-separated hours in UTC
AUTO_GENERATE_HOURS=9,14,20
AUTO_GENERATE_MINUTE=0

# ==================================================
# Topic Selection
# ==================================================
# Don't repeat topics for N days
TOPIC_EXCLUDE_DAYS=30

# Prefer trending topics
TOPIC_PREFER_TRENDING=true

# Minimum posts required to create topic
TOPIC_MIN_POSTS=3

# ==================================================
# Content Generation
# ==================================================
# Format: long_post, reel, thread
CONTENT_FORMAT=long_post

# Language: ru, en
CONTENT_LANGUAGE=ru

# Tone: professional, casual, enthusiastic
CONTENT_TONE=professional

# ==================================================
# Reel/Image Generation
# ==================================================
# Enable reel image generation
ENABLE_REEL=true

# Aspect ratio: square, reel (9:16), landscape
REEL_ASPECT_RATIO=square

# Style: modern, minimal, vibrant
REEL_STYLE=modern
